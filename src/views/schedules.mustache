<style>
    table.dataTable tbody td {
        vertical-align: middle;
    }
</style>
<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center" id="header">{{Schedules}}</h1>
        <br>
        <div style="width:90%; margin-left:calc(5%);">
            <div class="btn-group" role="group" style="float: right;">
                <button id="actionsDropdown" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Actions
                </button>
                <div class="dropdown-menu" aria-labelledby="actionsDropdown">
                    <a class="dropdown-item" href="/schedule/new">{{New Schedule}}</a> 
                    <a class="dropdown-item" href="/api/schedule/delete_all" onclick="return confirm('Are you sure you want to delete all schedules?');">{{Delete All}}</a>
                </div>
            </div>
            <br><br>
            <table id="table" class="table table-{{style}} table-striped table-bordered table-hover dt-responsive nowrap" style="position: center; width:100%">
                <thead class="thead-dark">
                <tr>
                    <th class="all">{{Name}}</th>
                    <th class="all">{{Config}}</th>
                    <th class="min-desktop">{{Device(s)}}</th>
                    <th class="all">{{Start Time}}</th>
                    <th class="all">{{End Time}}</th>
                    <th class="min-desktop">{{Timezone Offset}}</th>
                    <th class="min-desktop">{{Next Config}}</th>
                    <th class="all">{{Enabled}}</th>
                    <th class="all" width="5%"></th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <br>
    </body>
</html>

<script>
    if ("{{style}}" === 'dark') {
        $('body').css('background-color', 'rgb(33, 37, 41)');
        $('body').css('color', 'rgb(255, 255, 255)');
    }
    $(document).ready(function() {
        const table = $('#table').DataTable( {
            "ajax": {
                "url": "/api/schedules",
                "dataSrc": "data.schedules"
            },
            "dom": "<'row'<'col-sm-12 col-md-6'B><'col-sm-12 col-md-6'f>>" +
                   "<'row'<'col-sm-12'tr>>" +
                   "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
            "fixedHeader": {
                "header": true,
                "headerOffset": $('.navbar').height() + 15
            },
            "buttons": [
                "colvis",
                "pageLength"
            ],
            "colReorder": true,
            "stateSave": true,
            "paging":   true,
            "lengthMenu": [[25, 50, 100, -1], [25, 50, 100, "All"]],
            "columns": [
                { "data": "name" },
                { "data": "config" },
                { "data": "uuids" },
                { "data": "start_time" },
                { "data": "end_time" },
                { "data": "timezone" },
                { "data": "next_config" },
                { "data": "enabled" },
                { "data": "buttons" },
            ],
            "info": true,
            "order": [[ 0, "asc" ]],
            "search.caseInsensitive": true,
            "columnDefs": [ {
                "targets": [8],
                "orderable": false
            }],
            "responsive": true
        });
        table.on('draw.dt', function() {
            setTimeout(function () {
                table.ajax.reload(null, false);
            }, 5000);
        });
    });
</script>
