<!DOCTYPE html="{{locale}}">
    {{> header}}
    <body>
        {{> navbar}}
        <br>
        <h1 align="center" id="header">{{New Device}}</h1>
        <br>
        <div class="w-75" style="float: none; margin: 0 auto;">
            <form action="/api/device/new" method="post">
                <div class="form-group">
                    {{UUID}}
                    <input type="text" class="form-control" name="uuid" value="" placeholder="iPhone1" required>
                </div>
                <div class="form-group">
                    {{Select Device Config}}
                    <select class="form-control" name="config">
                        <option value="" selected disabled hidden>{{Choose a Config}}</option>
                        {{#configs}}
                            <option value="{{name}}">{{name}}</option>
                        {{/configs}}
                    </select>
                </div>
                <div class="form-group">
                    {{Device IP}}
                    <input type="text" class="form-control" name="clientip" value="" placeholder="192.168.1.2">
                </div>
                <div class="form-group">
                    {{Notes}}
                    <input type="text" class="form-control" name="notes" value="" placeholder="">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="enabled" checked>
                    <label class="form-check-label" for="enabled">{{Enabled}}</label>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">{{Create}}</button>
                <br>
            </form>
        </div>
    </body>
</html>

<script>
    if ("{{style}}" === 'dark') {
        $('body').css('background-color', 'rgb(33, 37, 41)');
        $('body').css('color', 'rgb(255, 255, 255)');
        //$('#header').css('color', 'white');
    }
</script>
